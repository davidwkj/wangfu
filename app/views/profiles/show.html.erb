<%- model_class = @profile.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<p>
  <strong><%= model_class.human_attribute_name(:no) %>:</strong><br>
  <%= @profile.no %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:name) %>:</strong><br>
  <%= @profile.name %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:jointime) %>:</strong><br>
  <%= @profile.jointime %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:lefttime) %>:</strong><br>
  <%= @profile.lefttime %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:birthday) %>:</strong><br>
  <%= @profile.birthday %>
</p>
<p>
