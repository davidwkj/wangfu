<%- model_class = Profile.new.class -%>
<h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:no) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:jointime) %></th>
      <th><%= model_class.human_attribute_name(:lefttime) %></th>
      <th><%= model_class.human_attribute_name(:birthday) %></th>
      <th><%= model_class.human_attribute_name(:qq) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:phone) %></th>
      <th><%= model_class.human_attribute_name(:city) %></th>
      <th><%= model_class.human_attribute_name(:bornat) %></th>
      <th><%= model_class.human_attribute_name(:slogan) %></th>
      <th><%= model_class.human_attribute_name(:sweibo) %></th>
      <th><%= model_class.human_attribute_name(:qweibo) %></th>
      <th><%= model_class.human_attribute_name(:site) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= link_to profile.no, profile_path(profile) %></td>
        <td><%= profile.name %></td>
        <td><%= profile.jointime %></td>
        <td><%= profile.lefttime %></td>
        <td><%= profile.birthday %></td>
        <td><%= profile.qq %></td>
        <td><%= profile.email %></td>
        <td><%= profile.phone %></td>
        <td><%= profile.city %></td>
        <td><%= profile.bornat %></td>
        <td><%= profile.slogan %></td>
        <td><%= profile.sweibo %></td>
        <td><%= profile.qweibo %></td>
        <td><%= profile.site %></td>
        <td><%=l profile.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_profile_path(profile), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      profile_path(profile),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_profile_path,
            :class => 'btn btn-primary' %>
